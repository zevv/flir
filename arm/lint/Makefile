LINTFLAGS-$(LINT_MISRA) += lint/misra.lnt

LINTFLAGS += lint/rules.lnt
LINTFLAGS += -w$(LINT_LEVEL)

LINTFLAGS += -dVERSION_SVN=\"$(VERSION_SVN)\"
LINTFLAGS += -dVERSION_MIN=$(VERSION_MIN)
LINTFLAGS += -dVERSION_MAJ=$(VERSION_MAJ)
LINTFLAGS += -dVERSION_DEV=$(VERSION_DEV)
LINTFLAGS += -dREVISION=$(REVISION)
LINTFLAGS += -dBUILD_USER=\"$(USER)\" 
LINTFLAGS += -dBUILD_HOSTNAME=\"$(shell hostname)\"
